<UserControl x:Class="SevenUpdate.Pages.InfoBar" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" MinWidth="600" Name="Infobar">
    <Grid MinWidth="500" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="502*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="54.168*" />
        </Grid.RowDefinitions>

        <Image Name="imgSide" Source="/Images/greenside.png" Stretch="Fill" StretchDirection="Both" Grid.RowSpan="2"
                MaxHeight="{Binding Path=ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                MinHeight="80" />
        <StackPanel Orientation="Vertical" Grid.Column="2" Grid.Row="1" Margin="0,0,2,0">
            <ProgressBar Height="15" IsIndeterminate="True" Name="pbProgressBar" VerticalAlignment="Top"
                    Visibility="Collapsed" HorizontalAlignment="Left" Width="250" Margin="0,5,0,0" />
            <TextBlock Name="tbStatus" Padding="5" Text="No new updates are avaliable for your programs"
                    Visibility="Visible" MaxWidth="400" MinWidth="350" HorizontalAlignment="Left"
                    VerticalAlignment="Top" />
        </StackPanel>

        <TextBlock FontSize="16" Foreground="#FF003399" Name="tbHeading" Text="Your programs are up to date"
                VerticalAlignment="Top" Grid.Column="2" Margin="0,15,2.46,0" />
        <Image Height="48" HorizontalAlignment="Left" IsEnabled="True" Margin="15,15,10,0" Name="imgShield"
                Source="/Images/GreenShield.png" Stretch="None" VerticalAlignment="Top" Width="48" Grid.Column="1"
                Grid.RowSpan="2" />

        <DockPanel Grid.Column="3" Grid.RowSpan="1" HorizontalAlignment="Right" VerticalAlignment="Stretch" Grid.Row="1">
            <Button HorizontalContentAlignment="Center" IsDefault="True" MinHeight="23" MinWidth="75" Name="btnAction"
                    Padding="5,1" VerticalContentAlignment="Center" Visibility="Collapsed" HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" Margin="0,0,8,6" Grid.Column="2" Grid.Row="1" DockPanel.Dock="Bottom">
                <StackPanel Orientation="Horizontal">
                    <Image Name="imgAdminShield" Source="pack://application:,,,./Images/Shield.png" Stretch="None" Margin="0,0,2,0"
                            IsEnabled="True" />
                    <TextBlock Name="tbAction" Text="Install updates"></TextBlock>
                </StackPanel>
            </Button>
            <TextBlock HorizontalAlignment="Right" Name="tbSelectedUpdates" Padding="5" TextWrapping="Wrap"
                    Text="999 important updates selected, 888.99 MB" Visibility="Collapsed" MaxWidth="300"
                    VerticalAlignment="Top" Grid.Column="2" Grid.Row="1" Margin="0,5,2,0" DockPanel.Dock="Top" />
        </DockPanel>
        <Line X1="0" Grid.Column="2" StrokeThickness="1" Stroke="LightGray"
                Y1="50" HorizontalAlignment="Center"
                VerticalAlignment="Top" Grid.Row="1" Name="line" Visibility="Hidden" Margin="0,5" />
        <StackPanel Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" Name="spUpdateInfo" VerticalAlignment="Top"
                Margin="0,5,0,0">
            <TextBlock Name="tbViewImportantUpdates" Padding="5" Text="{}{99} important updates are available"
                    Visibility="Collapsed" Foreground="#FF0066CC" Cursor="Hand" MouseEnter="TextBlock_MouseEnter"
                    MouseLeave="TextBlock_MouseLeave" />
            <TextBlock Name="tbViewOptionalUpdates" Padding="5" Text="{}{99} optional updates are available"
                    Visibility="Collapsed" Foreground="#FF0066CC" Cursor="Hand" MouseEnter="TextBlock_MouseEnter"
                    MouseLeave="TextBlock_MouseLeave" />
        </StackPanel>
    </Grid>
</UserControl>
