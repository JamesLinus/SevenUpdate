<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:converters="clr-namespace:SevenUpdate.Converters">
	<converters:FileSizeConverter x:Key="fileSizeConverter" />
	<converters:LocaleStringConverter x:Key="localeStringConverter" />
	<converters:BoolToStringConverter x:Key="is64BitConverter" />
	<converters:EnumToBoolConverter x:Key="enumConverter" />
	<converters:StringToLocaleConverter x:Key="stringLocaleConverter" />

	<DataTemplate x:Key="HeaderTemplateSortDesc">
		<DockPanel>
			<TextBlock HorizontalAlignment="Left" Text="{Binding}" />
			<Path StrokeThickness="1" Fill="Gray" Data="M 5,5 L 10,10 L 15,5 L 5,5" />
		</DockPanel>
	</DataTemplate>

	<DataTemplate x:Key="HeaderTemplateSortAsc">
		<DockPanel>
			<TextBlock HorizontalAlignment="Left" Text="{Binding}" />
			<Path StrokeThickness="1" Fill="Gray" Data="M 5,10 L 15,10 L 10,5 L 5,10" />
		</DockPanel>
	</DataTemplate>

	<Style x:Key="HeaderTemplate" TargetType="{x:Type GridViewColumnHeader}">
		<Setter Property="HorizontalContentAlignment" Value="Left" />
		<Setter Property="Padding" Value="5,0" />
	</Style>

	<BitmapImage x:Key="GreenSide" UriSource="pack://application:,,,/SevenUpdate;component/Images/GreenSide.png" />
	<BitmapImage x:Key="YellowSide" UriSource="pack://application:,,,/SevenUpdate;component/Images/YellowSide.png" />
	<BitmapImage x:Key="RedSide" UriSource="pack://application:,,,/SevenUpdate;component/Images/RedSide.png" />
	<BitmapImage x:Key="GreenShield" UriSource="pack://application:,,,/SevenUpdate;component/Images/GreenShield.png" />
	<BitmapImage x:Key="YellowShield" UriSource="pack://application:,,,/SevenUpdate;component/Images/YellowShield.png" />
	<BitmapImage x:Key="RedShield" UriSource="pack://application:,,,/SevenUpdate;component/Images/RedShield.png" />
	<BitmapImage x:Key="SUIcon" UriSource="pack://application:,,,/SevenUpdate;component/Images/Icon.png" />

	<Style x:Key="alternatingListViewItemStyle" TargetType="{x:Type ListViewItem}">
		<Style.Triggers>
			<!-- setting up triggers for alternate background colors -->
			<Trigger Property="ItemsControl.AlternationIndex" Value="0">
				<Setter Property="Background" Value="#F3F7FB"></Setter>
			</Trigger>
			<Trigger Property="ItemsControl.AlternationIndex" Value="1">
				<Setter Property="Background" Value="White"></Setter>
			</Trigger>
		</Style.Triggers>
	</Style>

	<Style x:Key="underlineTextBlock" TargetType="TextBlock">
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="TextDecorations" Value="Underline" />
			</Trigger>
		</Style.Triggers>
	</Style>

</ResourceDictionary>