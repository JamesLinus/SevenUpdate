<UserControl x:Class="SevenUpdate.Pages.InfoBar" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Controls="clr-namespace:Microsoft.Windows.Controls;assembly=Windows.Shell" mc:Ignorable="d" MinWidth="600" Loaded="Infobar_Loaded" d:DesignHeight="110" d:DesignWidth="600" MaxHeight="150">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/SevenUpdate;Component/Resources/InfoBar.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<!--Grid-->
	<Grid MinWidth="500" Name="grid">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="502*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="50*" />
		</Grid.RowDefinitions>
		<Border Grid.ColumnSpan="3" Grid.RowSpan="3" BorderThickness="1" BorderBrush="LightGray" />
		<ProgressBar IsIndeterminate="True" VerticalAlignment="Top" HorizontalAlignment="Left" Width="250" Style="{StaticResource infoBarProgress}" Grid.Column="2" Grid.Row="1" MinHeight="16" Margin="0,5,0,0" />
		<TextBlock Name="tbStatus" Padding="2" Visibility="Visible" TextWrapping="Wrap" Grid.Column="2" Grid.Row="1" VerticalAlignment="Top" Margin="0,5,12,0" HorizontalAlignment="Stretch" Text="No updates are available for your programs." MaxHeight="50" />
		<Image RenderOptions.BitmapScalingMode="HighQuality" Grid.RowSpan="3" Width="20" Style="{StaticResource infoBarSide}" Stretch="Fill" Name="imgSideBanner" MaxHeight="{Binding ElementName=grid, Path=ActualHeight}" />
		<TextBlock FontSize="16" Foreground="#FF003399" Grid.Column="2" HorizontalAlignment="Left" Name="tbHeading" Text="Your programs are up to date" VerticalAlignment="Center" Margin="0,5,0,0" />
		<Image RenderOptions.BitmapScalingMode="HighQuality" Height="48" HorizontalAlignment="Left" IsEnabled="True" Margin="15,10" Stretch="Fill" VerticalAlignment="Top" Width="48" Grid.Column="1" Grid.RowSpan="2" StretchDirection="Both" Style="{StaticResource infoBarShield}" />
		<Line Grid.Column="2" StrokeThickness="1" Stroke="LightGray" Grid.Row="1" Grid.RowSpan="2" Y1="25" HorizontalAlignment="Center" Margin="0,15,0,33" Name="line" />
		<StackPanel Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,8,0,0"></StackPanel>
		<TextBlock Padding="2" Foreground="#FF0066CC" Cursor="Hand" MouseDown="ImportantUpdates_MouseDown" Name="tbViewImportantUpdates" Style="{StaticResource underlineTextBlock}" Grid.Column="2" Grid.Row="1" Text="View important updates" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10,0,0" />
		<TextBlock Padding="2" Foreground="#FF0066CC" Cursor="Hand" MouseDown="OptionalUpdates_MouseDown" Name="tbViewOptionalUpdates" Style="{StaticResource underlineTextBlock}" Grid.Column="2" Grid.Row="2" Text="View optional updates" HorizontalAlignment="Left" VerticalAlignment="Top" />
		<TextBlock TextWrapping="Wrap" Grid.Column="2" LineHeight="25" Grid.Row="1" Name="tbSelectedUpdates" HorizontalAlignment="Right" Padding="2" Margin="0,10,4,0" VerticalAlignment="Top" Text="No updates selected." />
		<Controls:UacButton MinHeight="23" MinWidth="75" Padding="5,1" Visibility="Collapsed" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,12,12" Grid.Column="2" Grid.Row="2" IsDefault="True" Click="UacButton_Click" Name="btnAction" />
	</Grid>
</UserControl>