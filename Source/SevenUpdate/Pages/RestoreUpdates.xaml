<Page x:Class="SevenUpdate.Pages.RestoreUpdates" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" MinWidth="850" MinHeight="500"
        ShowsNavigationUI="False" Loaded="GetHiddenUpdates">
    <!-- Grid-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="415*" />
            <RowDefinition Height="44" />
        </Grid.RowDefinitions>
        <Line Stroke="#FFdfdfdf" VerticalAlignment="Top" Grid.Row="1"
                X1="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Page}}}" StrokeThickness="1" Stretch="Fill" />
        <TextBlock FontSize="16" Foreground="#FF003399" HorizontalAlignment="Left" Padding="2"
                Text="{LocText SevenUpdate:Resources:RestoreHiddenUpdates}" VerticalAlignment="Top" Margin="24,12,0,5" />
        <ListView AlternationCount="2" SelectionMode="Single" Grid.Row="1" Name="lvHiddenUpdates" MinWidth="800"
                Thumb.DragDelta="RestrictColumn" Foreground="Black" BorderThickness="0" MouseDoubleClick="ShowDetailsDialog"
                ListViewSorter.CustomSorter="SevenUpdate.CustomComparer.SuhSorter,SevenUpdate" TabIndex="0">
            <ListView.Resources>
                <ContextMenu x:Key="ItemContextMenu">
                    <MenuItem Header="{LocText SevenUpdate:Resources:ViewDetails}" Click="ShowDetailsDialog" />
                </ContextMenu>
                <DataTemplate x:Key="FirstCell">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Click="UpdateUIOnUpdateSelection">
                            <CheckBox.IsChecked>
                                <Binding Path="Status" Converter="{StaticResource statusToBool}" UpdateSourceTrigger="PropertyChanged"
                                        Mode="TwoWay" />
                            </CheckBox.IsChecked>
                        </CheckBox>
                    </StackPanel>
                </DataTemplate>
            </ListView.Resources>
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource alternatingListViewItemStyle}">
                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ShowDetails" />
                    <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn CellTemplate="{StaticResource FirstCell}" Width="25" />
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name, Mode=OneWay, Converter={StaticResource localeStringToString}}"
                            Header="{LocText SevenUpdate:Resources:Name}" Width="400" ListViewSorter.PropertyName="Name" />
                    <GridViewColumn
                            DisplayMemberBinding="{Binding Path=Importance, Mode=OneWay, Converter={StaticResource importanceToString}}"
                            Header="{LocText SevenUpdate:Resources:Importance}" Width="125" ListViewSorter.PropertyName="Importance" />
                    <GridViewColumn Header="{LocText SevenUpdate:Resources:Size}"
                            DisplayMemberBinding="{Binding Path=UpdateSize, Mode=OneWay, Converter={StaticResource fileSizeConverter}}"
                            Width="100" ListViewSorter.PropertyName="Size" />
                </GridView>
            </ListView.View>
        </ListView>
        <Rectangle Fill="#FFF0F0F0" Grid.Row="2" />
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Bottom" Grid.Row="2" Margin="0,0,10,12">
            <UacButton IsDefault="True" MinHeight="23" MinWidth="75" Click="RestoreUpdate" Padding="5,1"
                    ButtonText="{LocText SevenUpdate:Resources:Restore}" IsEnabled="False" Name="btnRestore" TabIndex="1" />
            <Button Content="{LocText SevenUpdate:Resources:Cancel}" IsCancel="True" IsDefault="False" Margin="6,0,0,0" MinHeight="23"
                    MinWidth="75" Padding="5,1" TabIndex="2" Click="NavigateToMainPage" />
        </StackPanel>
        <TextBlock Grid.Row="2" HorizontalAlignment="Left" Text="{LocText SevenUpdate:Resources:TotalSelectedUpdates, FormatSegment1=0}"
                VerticalAlignment="Center" Margin="20,0,0,0" Name="tbSelectedUpdates" />
        <Line Stroke="#FFdfdfdf" VerticalAlignment="Top" Grid.Row="2"
                X1="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Page}}}" StrokeThickness="1" Stretch="Fill" />
    </Grid>
</Page>