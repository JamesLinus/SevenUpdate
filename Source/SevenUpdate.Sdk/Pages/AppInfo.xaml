<Page x:Class="SevenUpdate.Sdk.Pages.AppInfo" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Controls="clr-namespace:Microsoft.Windows.Controls;assembly=Windows.Shell" xmlns:Sdk="clr-namespace:SevenUpdate.Sdk" mc:Ignorable="d" MinWidth="850" MinHeight="512" d:DesignHeight="500" d:DesignWidth="850" KeepAlive="True" Loaded="Page_Loaded">
    <!-- Grid-->
    <Grid Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24" />
            <ColumnDefinition Width="774*" />
            <ColumnDefinition Width="24" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="420*" />
            <RowDefinition Height="44" />
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="3" Fill="White" />
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" HorizontalAlignment="Left">
            <Controls:BackButton Grid.RowSpan="3" />
            <TextBlock Text="Software information" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" FontSize="14" Margin="15,-2,0,0">
				<TextBlock.Effect>
					<DropShadowEffect Color="White" BlurRadius="10" RenderingBias="Performance" ShadowDepth="0" Direction="0" />
				</TextBlock.Effect>
            </TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <TextBlock Text="Application name:" Padding="2" HorizontalAlignment="Left" ToolTip="The name of the application to be updated." Margin="0,5,0,0" />
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">
                <Controls:InfoTextBox x:Name="tbxAppName" Width="412" HorizontalAlignment="Left" MaxLength="75" Label="Seven Update SDK (max 75 characters)" TabIndex="0" Margin="5,0" Text="{Controls:ValidationBinding RequiredInputRule, Path=Name, Converter={StaticResource localeStringConverter}, ConverterParameter=App.Name}" />
                <CheckBox Content="64-bit application" Name="cxbIs64Bit" Margin="40,0,0,0" HorizontalAlignment="Left" Padding="4,0,0,0" VerticalAlignment="Center" ToolTip="Check this box if your software is native x64." TabIndex="1" IsChecked="{Binding Path=Is64Bit, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Padding="2" Text="Application install location:" ToolTip="The directory where the application is is installed. It is best to use system path variabes when applicable." />
                <RadioButton Content="File System" Name="rbtnFileSystem" HorizontalAlignment="Left" VerticalAlignment="Center" IsChecked="True" Margin="10,0,0,0" Checked="FileSystem_Checked" TabIndex="2" />
                <RadioButton Content="Registry" Name="rbtnRegistry" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Checked="Registry_Checked" TabIndex="3" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="Registry key:" HorizontalAlignment="Left" VerticalAlignment="Center" Name="lblRegistry" Margin="20,0,5,0" Visibility="Collapsed" ToolTip="The full key path where the value containing the install location of the application is stored. Acceptable hive formats: HKLM\Software or HKEY_LOCAL_MACHINE" />
                <TextBox x:Name="tbxAppLocation" TabIndex="4" Width="600" HorizontalAlignment="Left" FontSize="14" Text="{Controls:ValidationBinding RequiredInputRule, Path=Directory}" />
                <TextBlock Style="{StaticResource underlineTextBlock}" Padding="2" Text="Browse" ToolTip="Click to locate the application directory" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2,0,0,0" Foreground="#FF0066CC" Name="tbBrowse" MouseDown="Browse_MouseDown" Cursor="Hand" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="Value name:" ToolTip="The name of the value that contains the install location of the application" Name="lblValue" Visibility="Collapsed" HorizontalAlignment="Left" Margin="20,0,5,0" VerticalAlignment="Center" />
                <TextBox x:Name="tbxValueName" TabIndex="5" Width="387" Visibility="Collapsed" HorizontalAlignment="Left" FontSize="14" />
            </StackPanel>
            <TextBlock Text="Application description:" Padding="2" Margin="0,10,0,0" HorizontalAlignment="Left" />
            <Controls:InfoTextBox x:Name="tbxAppDescription" MaxLength="300" TextWrapping="Wrap" MaxLines="7" Height="62" Label="Write a summary about the application here, but make it no longer than 300 characters" TabIndex="6" HorizontalAlignment="Left" Width="750" Text="{Controls:ValidationBinding RequiredInputRule, Path=Description, Converter={StaticResource localeStringConverter}, ConverterParameter=App.Description}" />
            <StackPanel Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" Margin="0,20,0,10">
                <TextBlock Text="Publisher information" VerticalAlignment="Center" Padding="2" Foreground="#FF003399" />
                <Separator MinWidth="200" Width="555" Background="LightGray" VerticalAlignment="Center" Margin="2,2,0,0" />
            </StackPanel>
            <TextBlock Text="Publisher:" Padding="2" ToolTip="The software company or development team." HorizontalAlignment="Left" />
            <Controls:InfoTextBox x:Name="tbxPublisher" Width="412" Label="Seven Software" TabIndex="7" HorizontalAlignment="Left" Margin="5,0" Text="{Controls:ValidationBinding RequiredInputRule, Path=Publisher, Converter={StaticResource localeStringConverter}, ConverterParameter=App.Publisher}"/>
            <TextBlock Text="Application web site:" Padding="2" Margin="0,5,0,0" ToolTip="A url pointing to the web site of the publisher or the software." HorizontalAlignment="Left" />
            <Controls:InfoTextBox x:Name="tbxAppUrl" Width="650" Label="http://sevenupdate.com" TabIndex="8" HorizontalAlignment="Left" Margin="5,0" Text="{Controls:ValidationBinding UrlInputRule, Path=AppUrl}"></Controls:InfoTextBox>
            <TextBlock Text="Help &amp; Support web site:" Padding="2" Margin="0,5,0,0" ToolTip="A url pointing to the support area for this software." HorizontalAlignment="Left" />
            <Controls:InfoTextBox Label="http://sevenupdate.com/support" x:Name="tbxHelpUrl" TabIndex="9" Width="650" HorizontalAlignment="Left" Margin="5,0" Text="{Controls:ValidationBinding UrlInputRule, Path=HelpUrl}" />
        </StackPanel>
        <Line Stroke="#FFA0A0A0" VerticalAlignment="Top" Grid.Row="9" X1="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Page}}}" StrokeThickness="1" Grid.ColumnSpan="4" Name="line" />
        <Rectangle Grid.ColumnSpan="3" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="#FFF0F0F0" Name="rectangle" />
        <StackPanel Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,0,10,0" Grid.ColumnSpan="2">
            <Button HorizontalContentAlignment="Center" IsDefault="True" MinHeight="23" MinWidth="75" Padding="5,1" VerticalContentAlignment="Center" Content="_Next" Click="Button_Click" />
            <Button Content="Cancel" HorizontalContentAlignment="Center" IsDefault="False" MinHeight="23" MinWidth="75" Padding="5,1" VerticalContentAlignment="Center" Margin="6,0,0,0" IsCancel="True" Click="Cancel_Click" />
        </StackPanel>
        <ComboBox Grid.Column="1" HorizontalAlignment="Right" Name="cbxLanguage" VerticalAlignment="Center" MinWidth="80" SelectedIndex="0" SelectionChanged="Language_SelectionChanged">
            <ComboBoxItem Content="English" Tag="en" />
            <ComboBoxItem Content="Arabic" Tag="ar" />
            <ComboBoxItem Content="Bengali" Tag="bn" />
            <ComboBoxItem Content="Dutch" Tag="nl" />
            <ComboBoxItem Content="French" Tag="fr" />
            <ComboBoxItem Content="German" Tag="de" />
            <ComboBoxItem Content="Hindi" Tag="hi" />
            <ComboBoxItem Content="Japanese" Tag="ja" />
            <ComboBoxItem Content="Polish" Tag="pl" />
            <ComboBoxItem Content="Portuguese" Tag="pt" />
            <ComboBoxItem Content="Russian" Tag="ru" />
            <ComboBoxItem Content="Spanish" Tag="es" />
        </ComboBox>
    </Grid>
</Page>