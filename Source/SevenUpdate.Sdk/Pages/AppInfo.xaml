<Page x:Class="SevenUpdate.Sdk.Pages.AppInfo" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Controls="clr-namespace:Microsoft.Windows.Controls" mc:Ignorable="d" MinWidth="850" MinHeight="467" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" d:DesignHeight="467" d:DesignWidth="800" KeepAlive="True">
	<!-- Resources-->
    <Page.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Resources/Dictionary.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Page.Resources>
	<!-- Grid-->
	<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="grid">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="24" />
			<ColumnDefinition Width="800*" />
			<ColumnDefinition Width="24" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="48
                           " />
			<RowDefinition Height="405*" />
		</Grid.RowDefinitions>
		<Line StrokeThickness="1" Stroke="LightGray" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Y1="0" X1="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Page}}}" Grid.ColumnSpan="3" />
		<TextBlock Text="1. Software information" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Foreground="#FF003399" FontSize="16" />
		<StackPanel Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,10,0,0">
            <TextBlock Text="Application Name:" Padding="2" HorizontalAlignment="Left" ToolTip="The name of the application to be updated." />
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">
                <Controls:InfoTextBox Height="23" x:Name="tbAppName" Width="412" HorizontalAlignment="Left" MaxLength="75" Label="MyAppName (max 75 characters)" TabIndex="1" />
                <CheckBox Content="64-Bit application" Name="checkBox1" Margin="10,0,0,0" HorizontalAlignment="Left" Padding="4,0,0,0" VerticalAlignment="Center"
                        ToolTip="Check this box if your software is native x64." />
            </StackPanel>
			<TextBlock Text="Publisher:" Padding="2" HorizontalAlignment="Left" Margin="0,5,0,0" ToolTip="The software company or development team." />
			<Controls:InfoTextBox Height="23" x:Name="tbPublisher" Width="650" HorizontalAlignment="Left" Label="Seven Software" TabIndex="2" />
			<TextBlock Text="Publisher URL:" Padding="2" HorizontalAlignment="Left" Margin="0,5,0,0" ToolTip="A url pointing to the web site of the publisher or the software." />
			<Controls:InfoTextBox Height="23" x:Name="tbPublisherUrl" Width="650" HorizontalAlignment="Left" Label="http://sevenupdate.com or http://sevensoftware.com" TabIndex="3" />
			<TextBlock Text="Help &amp; Support URL:" Padding="2" HorizontalAlignment="Left" Margin="0,5,0,0" ToolTip="A url pointing to the support area for this software." />
			<Controls:InfoTextBox Height="23" Label="http://sevenupdate.com/support" x:Name="tbHelpUrl" TabIndex="4" Width="650" HorizontalAlignment="Left" />
			<TextBlock Text="Application Description:" Padding="2" HorizontalAlignment="Left" Margin="0,5,0,0" />
			<Controls:InfoTextBox x:Name="tbAppDescription" MaxLength="300" TextWrapping="Wrap" MaxLines="7" Height="83" Width="650" Label="Write a summary about the application here, but make it no longer than 300 characters" HorizontalAlignment="Left" TabIndex="5" />
			<TextBlock Padding="2" Text="Application Install Location:" ToolTip="The directory where your application is is installed. It is best to use variables when available" HorizontalAlignment="Left" Margin="0,5,0,0" />

			<StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">
				<Controls:InfoTextBox Height="23" Label="%PROGRAMFILES%\Seven Software\Seven Update" x:Name="tbAppDirectory" TabIndex="4" Width="650" HorizontalAlignment="Left" />
				<TextBlock Style="{StaticResource underlineTextBlock}" Padding="2" Text="Browse" ToolTip="Click to locate the application directory" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2,0,0,0" Foreground="#FF0066CC" Name="tbBrowse" MouseDown="Browse_MouseDown" />
			</StackPanel>
        </StackPanel>
    </Grid>
</Page>