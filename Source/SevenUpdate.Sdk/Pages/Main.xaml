<Page x:Class="SevenUpdate.Sdk.Pages.Main" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:Controls="clr-namespace:Microsoft.Windows.Controls;assembly=Windows.Shell" mc:Ignorable="d" MinWidth="850" MinHeight="512" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        KeepAlive="True" d:DesignHeight="467" d:DesignWidth="850">
    <!-- Grid-->
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="422*" />
            <RowDefinition Height="44" />
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="White"></Rectangle>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="250,84,250,38">
            <Controls:CommandLink x:Name="clNewProject" HorizontalAlignment="Center" VerticalAlignment="Center" Link="Create a new project" Note="Enables Seven Update to update your software"
                    Width="350" UseShield="False" TabIndex="0" Click="NewProject_Click" />
            <Controls:CommandLink x:Name="clEditProject" HorizontalAlignment="Center" VerticalAlignment="Center" Link="Open an existing Project" Note="Release a new update with an existing project"
                    Width="350" TabIndex="1" />
            <Controls:CommandLink x:Name="clTestProject" Link="Test your project" Note="Test your updates with the simulator" Width="350" TabIndex="2" Margin="0,0,0,12" />
            <Controls:CommandLink x:Name="clReleaseUpdate" HorizontalAlignment="Center" VerticalAlignment="Center" Link="Release an update" Note="Release your software updates" Width="350"
                    TabIndex="3" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Controls:BackButton Grid.RowSpan="3" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" IsEnabled="False" />
            <TextBlock Text="Welcome to the Seven Update SDK" FontSize="14" HorizontalAlignment="Left" Background="{x:Null}" VerticalAlignment="Center" Margin="15,-2,0,0">
				<TextBlock.Effect>
					<DropShadowEffect Color="White" BlurRadius="10" RenderingBias="Performance" ShadowDepth="0" Direction="0"></DropShadowEffect>
				</TextBlock.Effect>
            </TextBlock>
        </StackPanel>
        <TextBlock Text="Help &amp; Support" Style="{StaticResource underlineTextBlock}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,24,2" Padding="2" MouseDown="Help_MouseDown"
                Cursor="Hand">
			<TextBlock.Effect>
				<DropShadowEffect Color="White" BlurRadius="10" RenderingBias="Performance" ShadowDepth="0" Direction="0"></DropShadowEffect>
			</TextBlock.Effect>
        </TextBlock>

    </Grid>
</Page>