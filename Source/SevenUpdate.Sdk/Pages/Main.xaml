<Page x:Class="SevenUpdate.Sdk.Pages.Main" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" MinWidth="850" MinHeight="512" d:DesignHeight="467" d:DesignWidth="850" Loaded="LoadUI">
  <!-- Grid-->
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="590*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="32" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="422*" />
      <RowDefinition Height="41" />
    </Grid.RowDefinitions>
    <Rectangle Grid.Row="2" Fill="White" Grid.ColumnSpan="2" />
    <StackPanel Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="25,25,10,0" Grid.RowSpan="2">
      <CommandLink Content="{LocText SevenUpdate.Sdk:Resources:CreateNewProject}" Note="{LocText SevenUpdate.Sdk:Resources:CreateProjectNote}" TabIndex="1" Click="NewProject" />
      <CommandLink Content="{LocText SevenUpdate.Sdk:Resources:CreateNewUpdate}" Grid.Column="1" Note="{LocText SevenUpdate.Sdk:Resources:AddUpdate}" TabIndex="2" Click="NewUpdate" Visibility="Collapsed" Name="clNewUpdate" x:FieldModifier="private" />
      <CommandLink Grid.Column="1" TabIndex="2" Visibility="Collapsed" Name="clEdit" Click="EditSelectedItem" Content="{LocText SevenUpdate.Sdk:Resources:Edit}" x:FieldModifier="private" />
    </StackPanel>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
      <BackButton IsEnabled="False" />
      <TextBlock Style="{StaticResource glassText}" FontSize="14" HorizontalAlignment="Left" Background="{x:Null}" VerticalAlignment="Center" Margin="15,0,0,2" Name="tbTitle" Text="{LocText SevenUpdate.Sdk:Resources:SevenUpdateSDK}" x:FieldModifier="private"></TextBlock>
    </StackPanel>
    <TextBlock Style="{StaticResource glassLink}" Text="{LocText SevenUpdate.Sdk:Resources:HelpSupport}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,2,2" Padding="2" MouseDown="NavigateToSupport" Name="tbHelp" Grid.Column="1" x:FieldModifier="private" />
    <TextBlock Style="{StaticResource glassLink}" HorizontalAlignment="Left" Padding="2" Text="{LocText SevenUpdate.Sdk:Resources:AboutSevenUpdateSDK}" VerticalAlignment="Bottom" Grid.Row="3" Margin="12,0,0,12" MouseDown="ShowAboutDialog" Name="tbAbout" x:FieldModifier="private" />
    <TreeView BorderBrush="LightGray" Margin="5" MinWidth="250" Name="treeView" TabIndex="0" Grid.Row="2" Visibility="Hidden" SelectedItemChanged="ChangeUI" MouseRightButtonDown="SelectedItemOnRightClick" MaxWidth="400" x:FieldModifier="private">
      <TreeView.ContextMenu>
        <ContextMenu>
          <MenuItem Header="{LocText SevenUpdate.Sdk:Resources:ReleaseApplication}" Click="ReleaseSua" Visibility="{Binding Path=PlacementTarget.SelectedItem.HasItems, RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}}, Converter={StaticResource boolToVisibility}}">
            <MenuItem.Icon>
              <Image Source="/SevenUpdate.Sdk;component/Images/App.png" />
            </MenuItem.Icon>
          </MenuItem>
          <MenuItem Header="{LocText SevenUpdate.Sdk:Resources:ReleaseUpdates}" Click="ReleaseSui" Visibility="{Binding Path=PlacementTarget.SelectedItem.HasItems, RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}}, Converter={StaticResource boolToVisibility}}">
            <MenuItem.Icon>
              <Image Source="/SevenUpdate.Sdk;component/Images/Updates.png" />
            </MenuItem.Icon>
          </MenuItem>
          <Separator Visibility="{Binding Path=PlacementTarget.SelectedItem.HasItems, RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}}, Converter={StaticResource boolToVisibility}}" />
          <MenuItem Header="{LocText SevenUpdate.Sdk:Resources:Delete}" Click="DeleteItem">
            <MenuItem.Icon>
              <Image Source="/SevenUpdate.Sdk;component/Images/Delete.png" />
            </MenuItem.Icon>
          </MenuItem>
        </ContextMenu>
      </TreeView.ContextMenu>
    </TreeView>
  </Grid>
</Page>