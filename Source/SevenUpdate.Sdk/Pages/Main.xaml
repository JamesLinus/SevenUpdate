<Page x:Class="SevenUpdate.Sdk.Pages.Main" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Controls="clr-namespace:Microsoft.Windows.Controls" mc:Ignorable="d" MinWidth="850" MinHeight="512" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" KeepAlive="True" d:DesignHeight="467" d:DesignWidth="850">
	<!-- Grid-->
	<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ShowGridLines="False">
		<Grid.RowDefinitions>
			<RowDefinition Height="44" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="358*" />
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="250,30,250,41">
			<Controls:CommandLink x:Name="clNewProject" HorizontalAlignment="Center" VerticalAlignment="Center" Link="Create a new project" Note="Enables Seven Update to update your software" Width="350" UseShield="False" TabIndex="0" Click="NewProject_Click" />
			<Controls:CommandLink x:Name="clEditProject" HorizontalAlignment="Center" VerticalAlignment="Center" Link="Open an existing Project" Note="Release a new update with an existing project" Width="350" TabIndex="1" />
			<Controls:CommandLink x:Name="clTestProject" Link="Test your project" Note="Test your updates with the simulator" Width="350" TabIndex="2" Margin="0,0,0,12" />
			<Controls:CommandLink x:Name="clReleaseUpdate" HorizontalAlignment="Center" VerticalAlignment="Center" Link="Release an update" Note="Release your software updates" Width="350" TabIndex="3" Margin="0" />
		</StackPanel>
		<TextBlock Text="Welcome to the Seven Update SDK" FontSize="16" Foreground="#FF003399" HorizontalAlignment="Left" Margin="24,0,0,0" VerticalAlignment="Center" />
		<TextBlock Text="Help &amp; Support" Style="{StaticResource underlineTextBlock}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,24,2" Padding="2" Foreground="#FF0066CC" MouseDown="Help_MouseDown" Cursor="Hand" />
	</Grid>
</Page>