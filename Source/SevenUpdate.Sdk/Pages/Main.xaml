<Page x:Class="SevenUpdate.Sdk.Pages.Main" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Controls="clr-namespace:Microsoft.Windows.Controls;assembly=Windows.Shell" mc:Ignorable="d" MinWidth="850" MinHeight="512" KeepAlive="True" d:DesignHeight="467" d:DesignWidth="850">
	<!-- Grid-->
	<Grid ShowGridLines="False">
		<Grid.RowDefinitions>
			<RowDefinition Height="32" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="422*" />
			<RowDefinition Height="44" />
		</Grid.RowDefinitions>
		<Rectangle Grid.Row="2" Fill="White" />
		<StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
			<Controls:CommandLink Content="Create a new project" Note="Enables Seven Update to update your software" TabIndex="0" Click="NewProject_Click" />
			<Controls:CommandLink Content="Open an existing Project" Note="Edit or create an update with an existing project" TabIndex="1" Click="CommandLink_Click" />
			<Controls:CommandLink Content="Test your project" TabIndex="2" Note="Simulate updating to detect problems" Margin="0" />
        </StackPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
			<Controls:BackButton Grid.RowSpan="3" IsEnabled="False" />
			<TextBlock Text="Welcome to the Seven Update SDK" FontSize="14" HorizontalAlignment="Left" Background="{x:Null}" VerticalAlignment="Center" Margin="15,-2,0,0" Name="tbTitle">
				<TextBlock.Effect>
					<DropShadowEffect Color="White" BlurRadius="10" RenderingBias="Performance" ShadowDepth="0" Direction="0" />
				</TextBlock.Effect>
			</TextBlock>
		</StackPanel>
		<TextBlock Text="Help &amp; Support" Style="{StaticResource underlineTextBlock}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,12,2" Padding="2" MouseDown="Help_MouseDown" Cursor="Hand" Focusable="True" Name="tbHelp">
			<TextBlock.Effect>
				<DropShadowEffect Color="White" BlurRadius="10" RenderingBias="Performance" ShadowDepth="0" Direction="0" />
			</TextBlock.Effect>
		</TextBlock>
        <TextBlock Cursor="Hand" HorizontalAlignment="Left" Padding="2" Style="{StaticResource underlineTextBlock}" Text="About Seven Update SDK" VerticalAlignment="Bottom" Grid.Row="2"
                Margin="12,0,0,2" MouseDown="TextBlock_MouseDown" Focusable="True" />
	</Grid>
</Page>