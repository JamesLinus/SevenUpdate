<Page x:Class="SevenUpdate.Sdk.Pages.UpdateFiles" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Controls="clr-namespace:Microsoft.Windows.Controls" mc:Ignorable="d" MinWidth="850" MinHeight="512" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Title="SevenUpdate" KeepAlive="True" d:DesignHeight="467" d:DesignWidth="800">
	<!-- Grid-->
	<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="grid">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="648*" />
			<ColumnDefinition Width="24" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="44" />
			<RowDefinition Height="420*" />
			<RowDefinition Height="44" />
		</Grid.RowDefinitions>
		<TextBlock Text="Files" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#FF003399" FontSize="16" Margin="24,0,0,0" />
		<ListBox Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="150" Margin="10" SelectedIndex="0" BorderBrush="LightGray" />

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Margin="30,0,0,0">
			<Image  Source="/SevenUpdate.Sdk;component/Images/GreenArrow.png" Width="16" Height="16" Stretch="None" StretchDirection="UpOnly" />
			<TextBlock Text="To get started, right click the list box and add a file or folder of files." HorizontalAlignment="Left" Padding="2" Grid.Column="1" VerticalAlignment="Center" FontSize="16" Foreground="#FF003399" Grid.Row="1" />
		</StackPanel>

		<StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,10" Visibility="Collapsed">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
				<TextBlock Text="File action:" HorizontalAlignment="Left" Padding="2" Margin="0,0,10,0" ToolTip="The action to take on this file" />
				<ComboBox Name="cbxUpdateType" SelectedIndex="0" MinWidth="75" HorizontalAlignment="Left">
					<ComboBoxItem Content="Update" />
					<ComboBoxItem Content="Update if file exists" />
					<ComboBoxItem Content="Update &amp; register dll file" />
					<ComboBoxItem Content="Update &amp; execute" />
					<ComboBoxItem Content="Compare only" />
					<ComboBoxItem Content="Execute" />
					<ComboBoxItem Content="Delete" />
					<ComboBoxItem Content="Execute &amp; delete" />
					<ComboBoxItem Content="Unregister dll &amp; delete" />
				</ComboBox>
			</StackPanel>
			<TextBlock Text="Download URL:" HorizontalAlignment="Left" Padding="2" Margin="0,10,0,0" />
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
				<Controls:InfoTextBox Label="(Optional) An absolute url that will download the file (file must have public read access)" x:Name="tbxDownloadUrl" TabIndex="1" Margin="2,0,0,0" Width="620" TextChanged="Textbox_TextChanged" />
				<Image  Source="/SevenUpdate.Sdk;component/Images/Caution.png" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center" StretchDirection="UpOnly" Margin="4,0" Name="imgDownloadUrl" ToolTip="The path entered is not valid." Visibility="Collapsed" Height="16" Width="16"></Image>
			</StackPanel>
			<TextBlock Text="Install location:" HorizontalAlignment="Left" Padding="2" ToolTip="Standard windows variables are allowed ex. %USERNAME% and also these custom variables: %APPDIR%" Margin="0,10,0,0" />
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
				<Controls:InfoTextBox Label="An absolute Uri pointing to the installed location of the file on a system" x:Name="tbxInstallUri" TabIndex="2" Margin="2,0,0,0" Width="575" TextChanged="Textbox_TextChanged" />
				<TextBlock Style="{StaticResource underlineTextBlock}" Padding="2" Text="Browse" ToolTip="Click to locate the file location" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2,0,0,0" Foreground="#FF0066CC" Name="tbBrowse" MouseDown="Browse_MouseDown" Cursor="Hand" />
				<Image  Source="/SevenUpdate.Sdk;component/Images/Caution.png" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center" StretchDirection="UpOnly" Margin="4,0" Name="imgInstallUri" ToolTip="The path entered is not valid." Visibility="Visible" Height="16" Width="16"></Image>
			</StackPanel>
			<TextBlock Text="Command args:" HorizontalAlignment="Left" Padding="2" Margin="0,10,0,0" ToolTip="Enter any arguments to be executed with the file" />
			<Controls:InfoTextBox Label="(Optional) Enter command line arguments to be passed when file is executed during update" x:Name="tbxArgs" TextChanged="Textbox_TextChanged" Margin="2,0,0,0" />
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,10,0,0">
				<TextBlock Text="SHA-2 hash:" HorizontalAlignment="Left" Padding="2" />
				<TextBlock Padding="2" Margin="5,0,0,0" Name="tbHash" Foreground="#FF0066CC" MouseDown="Hash_MouseDown" Cursor="Hand" Style="{StaticResource underlineTextBlock}" Text="" ToolTip="Click here to update the hash, it must be correct for the file for Seven Update to work properly" />
			</StackPanel>
		</StackPanel>
		<Line Stroke="#FFA0A0A0" VerticalAlignment="Top" Grid.Row="2" X1="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Page}}}" StrokeThickness="1" Grid.ColumnSpan="3" />
		<Rectangle Grid.ColumnSpan="3" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="#FFF0F0F0" />
		<StackPanel Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,0,10,0" Grid.ColumnSpan="2">
			<Button HorizontalContentAlignment="Center" IsDefault="True" MinHeight="23" MinWidth="75" Padding="5,1" VerticalContentAlignment="Center" Content="_Next" Click="Button_Click"></Button>
			<Button Content="Cancel" HorizontalContentAlignment="Center" IsDefault="False" MinHeight="23" MinWidth="75" Padding="5,1" VerticalContentAlignment="Center" Margin="6,0,0,0" IsCancel="True" Click="Cancel_Click" />
		</StackPanel>
	</Grid>
</Page>