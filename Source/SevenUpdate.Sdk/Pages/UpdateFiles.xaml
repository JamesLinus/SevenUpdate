<Page x:Class="SevenUpdate.Sdk.Pages.UpdateFiles" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Controls="clr-namespace:Microsoft.Windows.Controls;assembly=Windows.Shell" mc:Ignorable="d" MinWidth="850" MinHeight="512" KeepAlive="True" d:DesignHeight="467" d:DesignWidth="800">
	<!-- Grid-->
	<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="grid">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="648*" />
			<ColumnDefinition Width="24" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="32" />
			<RowDefinition Height="420*" />
			<RowDefinition Height="44" />
		</Grid.RowDefinitions>
		<Rectangle Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="3" Fill="White" />
		<StackPanel Orientation="Horizontal" Grid.ColumnSpan="2">
			<Controls:BackButton Grid.RowSpan="3" />
			<TextBlock Text="Files" VerticalAlignment="Center" FontSize="14" Margin="15,-2,0,0">
				<TextBlock.Effect>
					<DropShadowEffect Color="White" BlurRadius="10" RenderingBias="Performance" ShadowDepth="0" Direction="0" />
				</TextBlock.Effect>
			</TextBlock>
		</StackPanel>
		<!--ListBox-->
		<ListBox Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="150" Margin="10" SelectedIndex="0" BorderBrush="LightGray" Name="listBox" SelectionChanged="listBox_SelectionChanged">
			<ListBox.ContextMenu>
				<ContextMenu>
					<MenuItem Header="Add File(s)" Click="AddFile_Click" Name="miAddFile">
						<MenuItem.Icon>
							<Image Source="/SevenUpdate.Sdk;component/Images/Files.png" />
						</MenuItem.Icon>
					</MenuItem>
					<MenuItem Header="Add Folder" Click="AddFolder_Click" Name="miAddFolder">
						<MenuItem.Icon>
							<Image Source="/SevenUpdate.Sdk;component/Images/Folder.png" />
						</MenuItem.Icon>
					</MenuItem>
					<Separator />
					<MenuItem Header="Remove File" IsEnabled="False" Name="miRemove" Click="miRemove_Click">
						<MenuItem.Icon>
							<Image Source="/SevenUpdate.Sdk;component/Images/DeleteFile.png" />
						</MenuItem.Icon>
					</MenuItem>
					<MenuItem Header="Remove All Files" IsEnabled="False" Name="miRemoveAll" Click="miRemoveAll_Click">
						<MenuItem.Icon>
							<Image Source="/SevenUpdate.Sdk;component/Images/Delete.png" />
						</MenuItem.Icon>
					</MenuItem>
				</ContextMenu>
			</ListBox.ContextMenu>
		</ListBox>
		<!--Help text-->
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Margin="30,0,0,0" Name="spHelp">
			<Image RenderOptions.BitmapScalingMode="HighQuality" Source="/SevenUpdate.Sdk;component/Images/LeftArrow.png" Width="45" Height="45" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center" />
			<TextBlock Text="To get started, right click the list box and add a file or folder of files." HorizontalAlignment="Left" Padding="2" Grid.Column="1" VerticalAlignment="Center" FontSize="18" Foreground="#FF003399" Grid.Row="1" Margin="10,0,0,0" />
		</StackPanel>
		<!--File Action-->
		<StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,10" Visibility="Collapsed" Name="spInput">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
				<TextBlock Text="File action:" HorizontalAlignment="Left" Padding="2" Margin="0,0,10,0" ToolTip="The action to take on this file" />
				<ComboBox Name="cbxUpdateType" SelectedIndex="0" MinWidth="75" HorizontalAlignment="Left" SelectionChanged="UpdateType_SelectionChanged">
					<ComboBoxItem Content="Update" />
					<ComboBoxItem Content="Update if file exists" />
					<ComboBoxItem Content="Update &amp; register dll file" />
					<ComboBoxItem Content="Update &amp; execute" />
					<ComboBoxItem Content="Compare only" />
					<ComboBoxItem Content="Execute" />
					<ComboBoxItem Content="Delete" />
					<ComboBoxItem Content="Execute &amp; delete" />
					<ComboBoxItem Content="Unregister dll &amp; delete" />
				</ComboBox>
			</StackPanel>
			<TextBlock Text="Download URL:" HorizontalAlignment="Left" Padding="2" Margin="0,10,0,0" />
			<StackPanel Orientation="Horizontal">
				<Controls:InfoTextBox Label="(Optional) An absolute url that will download the file (file must have public read access)" x:Name="tbxDownloadUrl" TabIndex="1" Margin="2,0,0,0" Width="620" TextChanged="Textbox_TextChanged" />
				<Image Source="/SevenUpdate.Sdk;component/Images/Caution.png" Margin="4,0" Name="imgDownloadUrl" ToolTip="The path entered is not valid." Visibility="Collapsed" UseLayoutRounding="True" />
			</StackPanel>
			<TextBlock Text="Install location:" HorizontalAlignment="Left" Padding="2" ToolTip="Standard windows variables are allowed ex. %USERNAME% and also these custom variables: %APPDIR%" Margin="0,10,0,0" />
			<StackPanel Orientation="Horizontal">
				<Controls:InfoTextBox Label="An absolute Uri pointing to the installed location of the file on a system" x:Name="tbxInstallUri" TabIndex="2" Margin="2,0,0,0" TextChanged="Textbox_TextChanged" MinWidth="575" />
				<TextBlock Style="{StaticResource underlineTextBlock}" Padding="2" Text="Browse" ToolTip="Click to locate the file location" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2,0,0,0" Foreground="#FF0066CC" Name="tbBrowse" MouseDown="Browse_MouseDown" Cursor="Hand" />
				<Image Source="/SevenUpdate.Sdk;component/Images/Caution.png" Margin="4,0" Name="imgInstallUri" ToolTip="The path entered is not valid." Visibility="Collapsed" UseLayoutRounding="True" />
			</StackPanel>
			<TextBlock Text="Command args:" HorizontalAlignment="Left" Padding="2" Margin="0,10,0,0" ToolTip="Enter any arguments to be executed with the file" />
			<Controls:InfoTextBox Label="(Optional) Enter command line arguments to be passed when file is executed during update" x:Name="tbxArgs" TextChanged="Textbox_TextChanged" Margin="2,0,0,0" />
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,10,0,0">
				<TextBlock Text="SHA-2 hash:" HorizontalAlignment="Left" Padding="2" />
				<TextBlock Padding="2" Margin="5,0,0,0" Name="tbHash" Foreground="#FF0066CC" MouseDown="Hash_MouseDown" Cursor="Hand" Style="{StaticResource underlineTextBlock}" Text="" ToolTip="Click here to update the hash, it must be correct for the file for Seven Update to work properly" />
			</StackPanel>
		</StackPanel>
		<Line Stroke="#FFA0A0A0" VerticalAlignment="Top" Grid.Row="2" X1="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Page}}}" StrokeThickness="1" Grid.ColumnSpan="3" Name="line" />
		<Rectangle Grid.ColumnSpan="3" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="#FFF0F0F0" Name="rectangle" />
		<StackPanel Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,0,10,0" Grid.ColumnSpan="2">
			<Button HorizontalContentAlignment="Center" IsDefault="True" MinHeight="23" MinWidth="75" Padding="5,1" VerticalContentAlignment="Center" Content="_Next" Click="Button_Click" />
			<Button Content="Cancel" HorizontalContentAlignment="Center" IsDefault="False" MinHeight="23" MinWidth="75" Padding="5,1" VerticalContentAlignment="Center" Margin="6,0,0,0" IsCancel="True" Click="Cancel_Click" />
		</StackPanel>
	</Grid>
</Page>