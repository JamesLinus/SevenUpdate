<Page x:Class="SevenUpdate.Sdk.Pages.UpdateInfo" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Controls="clr-namespace:Microsoft.Windows.Controls" mc:Ignorable="d" MinWidth="850" MinHeight="467" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" d:DesignHeight="467" d:DesignWidth="800" KeepAlive="True">
	<Page.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Resources/Dictionary.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Page.Resources>
	<!-- Grid-->
	<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="grid">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="24" />
			<ColumnDefinition Width="800*" />
			<ColumnDefinition Width="24" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="48
                           " />
            <RowDefinition Height="405*" />
		</Grid.RowDefinitions>
		<Line StrokeThickness="1" Stroke="LightGray" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Y1="0" X1="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Page}}}" Grid.ColumnSpan="3" />
		<Label Content="1. Update information" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Foreground="#FF003399" FontSize="16" />
		<StackPanel Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,10,0,0">
			<Label Content="Update Title:" Padding="2" HorizontalAlignment="Left" />
			<Controls:InfoTextBox Height="23" x:Name="tbUpdateTitle" Width="412" HorizontalAlignment="Left" MaxLength="75" Label="Performance update for MyAppName" TabIndex="1" />
			<Label Content="Update Information URL:" Padding="2" HorizontalAlignment="Left" Margin="0,5,0,0" />
			<Controls:InfoTextBox Height="23" x:Name="tbInfoUrl" Width="650" HorizontalAlignment="Left" Label="http://sevenupdate.com/SDK-Update" TabIndex="2" />
			<Label Content="Software License URL:" Padding="2" HorizontalAlignment="Left" Margin="0,5,0,0" />
			<Controls:InfoTextBox Height="23" x:Name="tbSLUrl" Width="650" HorizontalAlignment="Left" Label="http://www.gnu.org/licenses/gpl-3.0.txt (Must point to readable file)"
                    TabIndex="3" />
			<Label Content="Update Details:" Padding="2" HorizontalAlignment="Left" Margin="0,5,0,0" />
			<Controls:InfoTextBox x:Name="tbUpdateDetails" MaxLength="300" TextWrapping="Wrap" MaxLines="7" Height="83" Width="650" Label="Write any information about the update here, like new changes and features the update gives." HorizontalAlignment="Left" TabIndex="4" />
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,10">
                <Label Content="Release Date:" Padding="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,5,0" />
                <DatePicker IsTodayHighlighted="True" DisplayDateStart="1/1/2008" DisplayDateEnd="12/21/2012" TabIndex="5" HorizontalAlignment="Left" VerticalAlignment="Center"
                        Margin="0,0,50,0" MaxWidth="250"></DatePicker>
                <Label Content="Update Type:" Padding="2" Margin="0,0,5,0" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <ComboBox Height="23" Name="comboBox1" SelectedIndex="0" TabIndex="6" MinWidth="65" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <ComboBoxItem Content="Important" />
                    <ComboBoxItem Content="Recommended" />
                    <ComboBoxItem Content="Optional" />
                    <ComboBoxItem Content="Locale" />
                </ComboBox>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal"></StackPanel>
        </StackPanel>
    </Grid>
</Page>