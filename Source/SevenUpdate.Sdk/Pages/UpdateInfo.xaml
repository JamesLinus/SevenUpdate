<Page x:Class="SevenUpdate.Sdk.Pages.UpdateInfo" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Controls="clr-namespace:Microsoft.Windows.Controls;assembly=Windows.Shell" mc:Ignorable="d" MinWidth="850" MinHeight="512" d:DesignHeight="467" d:DesignWidth="800" KeepAlive="True" Loaded="Page_Loaded">
	<!-- Grid-->
	<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="grid">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="24" />
			<ColumnDefinition Width="800*" />
			<ColumnDefinition Width="24" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="32" />
			<RowDefinition Height="420*" />
			<RowDefinition Height="44" />
		</Grid.RowDefinitions>
		<Rectangle Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="3" Fill="White" />
		<StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" HorizontalAlignment="Left">
			<Controls:BackButton Grid.RowSpan="3"></Controls:BackButton>
			<TextBlock Text="Update information" VerticalAlignment="Center" FontSize="14" Margin="15,-2,0,0">
				<TextBlock.Effect>
					<DropShadowEffect Color="White" BlurRadius="10" RenderingBias="Performance" ShadowDepth="0" Direction="0" />
				</TextBlock.Effect>
			</TextBlock>
		</StackPanel>
		<StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top">
			<TextBlock Text="Update name:" Padding="2" HorizontalAlignment="Left" ToolTip="This should describe your update and include the name of the software." Margin="0,5,0,0" />
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
				<Controls:InfoTextBox x:Name="tbxUpdateName" Width="412" HorizontalAlignment="Left" MaxLength="75" Label="Performance update for MyAppName (max 75 characters)" TabIndex="0" LostKeyboardFocus="UpdateTitle_LostKeyboardFocus" TextChanged="Textbox_TextChanged" />
				<Image Source="/SevenUpdate.Sdk;component/Images/Caution.png" Margin="4,0" Name="imgUpdateName" ToolTip="The update name entered is not valid." Visibility="Visible" UseLayoutRounding="True" />
			</StackPanel>
			<TextBlock Text="Update details:" Padding="2" Margin="0,5,0,0" />
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
				<Controls:InfoTextBox x:Name="tbxUpdateDetails" MaxLength="300" TextWrapping="Wrap" MaxLines="7" Height="83" Width="650" Label="Write a summary about the update here, it can be simple as a changelog, but make it no longer than 300 characters" TabIndex="4" LostKeyboardFocus="UpdateDetails_LostKeyboardFocus" HorizontalAlignment="Left" TextChanged="Textbox_TextChanged" />
				<Image Source="/SevenUpdate.Sdk;component/Images/Caution.png" Margin="4,0" Name="imgUpdateDetails" ToolTip="Update details are required." Visibility="Visible" UseLayoutRounding="True" />
			</StackPanel>
			<TextBlock Text="Update information URL:" Padding="2" HorizontalAlignment="Left" Margin="0,5,0,0" ToolTip="Should be a web page with information about this update." />
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
				<Controls:InfoTextBox x:Name="tbxInfoUrl" Width="650" HorizontalAlignment="Left" Label="(Optional) http://sevenupdate.com/SDK-Update" TabIndex="1" TextChanged="Textbox_TextChanged" />
				<Image Source="/SevenUpdate.Sdk;component/Images/Caution.png" Margin="4,0" Name="imgUpdateInfo" ToolTip="The Url entered is not valid." Visibility="Collapsed" UseLayoutRounding="True" />
			</StackPanel>
			<TextBlock Text="Software license URL:" Padding="2" HorizontalAlignment="Left" Margin="0,5,0,0" ToolTip="A url pointing to txt or rtf document containing the software license." />
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
				<Controls:InfoTextBox x:Name="tbxLicenseUrl" Width="650" HorizontalAlignment="Left" Label="(Optional) http://www.gnu.org/licenses/gpl-3.0.txt (Must point to readable file)" TabIndex="2" TextChanged="Textbox_TextChanged" />
				<Image Source="/SevenUpdate.Sdk;component/Images/Caution.png" Margin="4,0" Name="imgLicense" ToolTip="The Url entered is not valid." Visibility="Collapsed" UseLayoutRounding="True" />
			</StackPanel>
			<TextBlock Text="Download directory URL:" Padding="2" HorizontalAlignment="Left" Margin="0,5,0,0" ToolTip="The main directory on your server, that contains all of the files needed for the update, it needs to be a valid uri with public read access" />
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
				<Controls:InfoTextBox Label="http://myapp.com/updates/testupdate1" x:Name="tbxDownloadUrl" TabIndex="3" Width="650" HorizontalAlignment="Left" TextChanged="Textbox_TextChanged" />
				<Image Source="/SevenUpdate.Sdk;component/Images/Caution.png" Margin="4,0" Name="imgDownloadLoc" ToolTip="The path entered is not valid." Visibility="Visible" UseLayoutRounding="True" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,10">
				<TextBlock Text="Release date:" Padding="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,5,0" ToolTip="The date the update was released to the public." />
				<DatePicker IsTodayHighlighted="True" DisplayDateEnd="12/21/2012" TabIndex="5" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,4,0" MaxWidth="115" Name="dpReleaseDate" DisplayDateStart="1/1/2006" HorizontalContentAlignment="Left" SelectedDateChanged="dpReleaseDate_SelectedDateChanged" />
				<Image Name="imgReleaseDate" Source="/SevenUpdate.Sdk;component/Images/Caution.png" ToolTip="A valid date is required." UseLayoutRounding="True" Margin="4,0,45,0" />
				<TextBlock Text="Update importance:" Padding="2" Margin="0,0,5,0" VerticalAlignment="Center" HorizontalAlignment="Left" ToolTip="Categorize this update by importance." />
				<ComboBox Height="23" Name="cbxUpdateImportance" SelectedIndex="0" TabIndex="6" MinWidth="65" HorizontalAlignment="Left" VerticalAlignment="Center">
					<ComboBoxItem Content="Important" />
					<ComboBoxItem Content="Recommended" />
					<ComboBoxItem Content="Optional" />
					<ComboBoxItem Content="Locale" />
				</ComboBox>
			</StackPanel>
			<StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" />
		</StackPanel>
		<Line Stroke="#FFA0A0A0" VerticalAlignment="Top" Grid.Row="9" X1="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Page}}}" StrokeThickness="1" Grid.ColumnSpan="4" Name="line" />
		<Rectangle Grid.ColumnSpan="3" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="#FFF0F0F0" Name="rectangle" />
		<StackPanel Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,0,10,0" Grid.ColumnSpan="2">
			<Button HorizontalContentAlignment="Center" IsDefault="True" MinHeight="23" MinWidth="75" Padding="5,1" VerticalContentAlignment="Center" Content="_Next" Click="Button_Click" />
			<Button Content="Cancel" HorizontalContentAlignment="Center" IsDefault="False" MinHeight="23" MinWidth="75" Padding="5,1" VerticalContentAlignment="Center" Margin="6,0,0,0" IsCancel="True" Click="Cancel_Click" />
		</StackPanel>
		<ComboBox Grid.Column="1" HorizontalAlignment="Right" Name="cbxLanguage" VerticalAlignment="Center" MinWidth="80" SelectedIndex="0" SelectionChanged="Language_SelectionChanged">
			<ComboBoxItem Content="English" Tag="en" />
			<ComboBoxItem Content="Arabic" Tag="ar" />
			<ComboBoxItem Content="Bengali" Tag="bn" />
			<ComboBoxItem Content="Dutch" Tag="nl" />
			<ComboBoxItem Content="French" Tag="fr" />
			<ComboBoxItem Content="German" Tag="de" />
			<ComboBoxItem Content="Hindi" Tag="hi" />
			<ComboBoxItem Content="Japanese" Tag="ja" />
			<ComboBoxItem Content="Polish" Tag="pl" />
			<ComboBoxItem Content="Portuguese" Tag="pt" />
			<ComboBoxItem Content="Russian" Tag="ru" />
			<ComboBoxItem Content="Spanish" Tag="es" />
		</ComboBox>
	</Grid>
</Page>