			<Controls:CommandLink x:Name="clNewUpdate" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Create a new update" Width="350" TabIndex="2" Height="63" />
			<Controls:CommandLink x:Name="clDeleteUpdate" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Delete selected update" Width="350" TabIndex="2" Height="63" />
