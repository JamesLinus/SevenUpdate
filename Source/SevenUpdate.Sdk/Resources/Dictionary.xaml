<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Sdk="clr-namespace:SevenUpdate.Sdk">
	<Sdk:StringToLocaleStringConverter x:Key="stringToLocaleString" />
	<BooleanToVisibilityConverter x:Key="boolToVisibility" />
	<Sdk:BoolToLabelConverter x:Key="boolToLabel" />
	<Sdk:StringToBoolConverter x:Key="stringToBool" />
	<Sdk:StringToVisibilityConverter x:Key="stringToVisibility" />
	<Sdk:IntToVisibilityConverter x:Key="intToVisibility" />
	<Sdk:IntToBoolConverter x:Key="intToBool" />
	<Sdk:DateConverter x:Key="dateConverter" />

	<Style x:Key="underlineTextBlock" TargetType="TextBlock">
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="TextDecorations" Value="Underline" />
			</Trigger>
		</Style.Triggers>
	</Style>

	<Style TargetType="{x:Type Image}">
		<Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor" />
	</Style>
</ResourceDictionary>