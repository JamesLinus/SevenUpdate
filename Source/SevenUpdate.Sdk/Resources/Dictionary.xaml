<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Sdk="clr-namespace:SevenUpdate.Sdk" xmlns:SevenUpdate="clr-namespace:SevenUpdate;assembly=SevenUpdate.Base">
	<Sdk:StringToLocaleStringConverter x:Key="stringToLocaleString" />
	<BooleanToVisibilityConverter x:Key="boolToVisibility" />
	<Sdk:BoolToLabelConverter x:Key="boolToLabel" />
	<SevenUpdate:StringToBoolConverter x:Key="stringToBool" />
	<SevenUpdate:StringToVisibilityConverter x:Key="stringToVisibility" />
	<SevenUpdate:IntToVisibilityConverter x:Key="intToVisibility" />
	<SevenUpdate:IntToBoolConverter x:Key="intToBool" />
	<Sdk:DateConverter x:Key="dateConverter" />
    <SevenUpdate:EnumToBool x:Key="enumToBool" />
    <SevenUpdate:InverseEnumToBool x:Key="inverseEnumToBool" />

    <!--Underline TextBlock-->
    <Style x:Key="underlineTextBlock" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FF0066CC" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="TextDecorations" Value="Underline" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{x:Static SystemColors.GrayTextBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type Image}">
		<Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor" />
	</Style>
</ResourceDictionary>